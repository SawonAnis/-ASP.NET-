@{
    ViewBag.Title = "Dashboard";
}

<h2>Welcome to Inventory Tracking System</h2>

<div class="container">
    <h3>Please select your role to login or register:</h3>

    <div class="row">
        <div class="col-md-4">
          
            <a href="@Url.Action("Login", "Account")?role=Admin" class="btn btn-primary btn-lg btn-block">Admin Login</a>
        </div>
        <div class="col-md-4">
           
            <a href="@Url.Action("Login", "Account")?role=Staff" class="btn btn-success btn-lg btn-block">User Login</a>
        </div>
        <div class="col-md-4">
          
            <a href="@Url.Action("Register", "Account")" class="btn btn-warning btn-lg btn-block">Register</a>
        </div>
    </div>
</div>




